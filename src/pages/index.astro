---
import Layout from "../layouts/Layout.astro";
import Hero from "@/components/hero.astro";
import CentreText from "@/components/centre-text.astro";
import ProductList from "@/components/list/product-list.astro";
import BenefitsCarousel from "@/components/benefits-carousel";
---

<Layout>
  <Hero />
  <CentreText
    title={{ sans: "Your health", serif: "your way" }}
    titleSize="lg"
    padding="lg"
    cta={{ text: "Learn more", href: "/test" }}
  />
  <ProductList />
  <CentreText title={{ sans: "How it works", serif: "in 3 steps" }} titleSize="md" padding="sm" />
  <BenefitsCarousel client:load />
</Layout>
