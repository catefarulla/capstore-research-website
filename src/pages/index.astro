---
import Layout from "../layouts/Layout.astro";
import Hero from "@/components/hero.astro";
import CentreText from "@/components/centre-text.astro";
import ProductList from "@/components/list/product-list.astro";
import BenefitsCarousel from "@/components/benefits-carousel";
import { homeData } from "@/data/home";
---

<Layout>
  <Hero {...homeData.hero} />
  <CentreText title={homeData.centreBlockTextOne.title} titleSize="lg" padding="lg" />
  <ProductList />
  <CentreText title={homeData.centreBlockTextTwo.title} titleSize="md" padding="sm" />
  <BenefitsCarousel client:load />
</Layout>
