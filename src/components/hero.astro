---
type Props = {
  title: string;
  description: string;
  video: string;
};

const { title, description, video } = Astro.props;
---

<div class="px-4">
  <div class="relative w-full h-[80vh] max-h-[700px] overflow-hidden rounded-3xl">
    {/* Video Background */}
    <video class="absolute top-0 left-0 w-full h-full object-cover" autoplay loop muted playsinline>
      <source src={video} type="video/mp4" />
      Your browser does not support the video tag.
    </video>

    {/* Dark Overlay */}
    <div class="absolute top-0 left-0 w-full h-full bg-black/50"></div>

    {/* Content */}
    <div class="relative h-full flex items-center">
      <div class="container mx-auto px-6">
        <div class="max-w-[600px]">
          <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-white mb-4 md:mb-6">
            {title}
          </h1>
          <p class="text-base sm:text-lg md:text-xl text-white/90">
            {description}
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
