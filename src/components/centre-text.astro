---
import { cva, type VariantProps } from "class-variance-authority";
import { cn } from "../lib/utils";
import { Button, buttonVariants } from "./ui/button";
type Props = {
  title: {
    sans: string;
    serif?: string;
  };
  description?: string;
  cta?: {
    text: string;
    href: string;
  };
  titleSize?: "sm" | "md" | "lg";
  padding?: "sm" | "md" | "lg";
};

const sansTitleStyles = cva(["font-sans font-semibold !leading-[1.1]"], {
  variants: {
    size: {
      sm: "text-2xl sm:text-3xl md:text-4xl",
      md: "text-3xl sm:text-4xl md:text-5xl",
      lg: "text-4xl sm:text-5xl md:text-6xl",
    },
  },
});

const serifTitleStyles = cva(["font-serif !leading-[1.1]"], {
  variants: {
    size: {
      sm: "text-[1.7rem] sm:text-[2.15rem] md:text-[2.5rem]",
      md: "text-[2.15rem] sm:text-[2.5rem] md:text-[3.25rem]",
      lg: "text-[2.5rem] sm:text-[3.25rem] md:text-[4rem]",
    },
  },
});

const paddingStyles = cva(["py-16 md:py-24 px-4 md:px-8"], {
  variants: {
    padding: {
      sm: "py-16 md:py-24 px-4",
      md: "py-24 md:py-32 px-4",
      lg: "py-32 md:py-40 px-4",
    },
  },
});

const { title, description, cta, titleSize = "md", padding = "md" } = Astro.props;
---

<div
  class={cn(
    "flex flex-col gap-8 md:gap-10 py-16 md:py-24 px-4 md:px-8 items-center justify-center text-center",
    paddingStyles({ padding })
  )}
>
  <h1 class="max-w-sm">
    <span class={cn(sansTitleStyles({ size: titleSize }))}>
      {title.sans}
    </span>
    {title.serif && <span class={cn(serifTitleStyles({ size: titleSize }))}>{title.serif}</span>}
  </h1>
  {
    description && (
      <p class="text-base max-w-xl sm:text-lg md:text-xl text-black/70">{description}</p>
    )
  }
  {
    cta && (
      <div>
        <a class={cn(buttonVariants({ variant: "default" }))} href={cta.href}>
          {cta.text}
        </a>
      </div>
    )
  }
</div>
