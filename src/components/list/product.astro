---
type ProductItem = {
  title: string;
  price: number;
  href: string;
  image: string;
};

const { title, price, href, image } = Astro.props;
---

<div class="overflow-hidden rounded-3xl bg-white shadow-lg">
  <div class="relative h-[400px] w-full overflow-hidden">
    <img
      src={image}
      alt={title}
      class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
    />
  </div>
  <div
    class="p-6 bg-gradient-to-t from-black/50 to-transparent absolute bottom-0 w-full text-white"
  >
    <div
      class="flex flex-col md:flex-row justify-between gap-6 pb-6 md:pb-0 md:gap-0 md:items-center"
    >
      <div>
        <h3 class="text-4xl font-light">{title}</h3>
        <p class="text-lg">From ${price}</p>
      </div>
      <div>
        <a
          href={href}
          class="bg-white text-black px-6 py-2 rounded-full hover:bg-gray-100 transition-colors"
        >
          Shop
        </a>
      </div>
    </div>
  </div>
</div>
