---
import BenefitList from "./list";
import type { Benefit } from "@/data/products/type";

interface Props {
  benefits: Benefit[];
  productName: string;
}

const { benefits, productName } = Astro.props;
---

<section class="w-full py-16 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-medium text-gray-900 mb-4">
        {productName} Benefits
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Discover all the ways {productName} can help you achieve your health and fitness goals.
      </p>
    </div>
    <BenefitList benefits={benefits} />
  </div>
</section>
