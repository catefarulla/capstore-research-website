---
import ComparisonTable from "./table";

const { env } = Astro.locals.runtime;
const showComparison = env.SHOW_COMPARISON === "true" ? true : false;
---

{
  showComparison && (
    <section class="w-full py-16 px-4 sm:px-6 lg:px-8 bg-white">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-heading text-gray-900 mb-4">Compare Models</h2>
          <p class="text-lg text-text-secondary max-w-2xl mx-auto">
            Find the perfect Chronos watch for your lifestyle. Compare features and capabilities
            across our range of models.
          </p>
        </div>
        <ComparisonTable client:load />
      </div>
    </section>
  )
}
