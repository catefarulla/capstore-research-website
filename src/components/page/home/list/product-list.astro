---
import Product from "./product.astro";
import { getProductListData } from "@/data/products/helpers";

const products = getProductListData();
---

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mx-auto px-4">
  {
    products.map((product) => (
      <div class="relative group">
        <Product {...product} />
      </div>
    ))
  }
</div>
