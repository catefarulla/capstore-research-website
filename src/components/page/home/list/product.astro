---
import { cn } from "@/lib/utils";
import { buttonVariants } from "@/components/ui/button";

type Props = {
  title: string;
  price: number;
  href: string;
  image: string;
};

const { title, price, href, image } = Astro.props;
---

<a href={href} class="block group">
  <div class="overflow-hidden bg-surface-coolGrey border-2 border-surface-coolGrey relative">
    <div class="relative h-[400px] w-full">
      <img
        src={image}
        alt={title}
        class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
      />
    </div>
    <div
      class="p-6 bg-gradient-to-t from-black/50 to-transparent absolute bottom-0 w-full text-white"
    >
      <div class="flex justify-between items-center">
        <div>
          <h3 class="text-2xl font-light">{title}</h3>
          <p class="text-lg">From ${price}</p>
        </div>
        <div class={cn(buttonVariants({ variant: "accent" }))}>Shop</div>
      </div>
    </div>
  </div>
</a>
